Class: Pizza

SubClassOf:
hasBase some PizzaBase,
hasCaloricContent some xsd:integer

DisjointClasses:
Pizza, PizzaBase, PizzaTopping

Individuals:
CustomPizza1,
CustomPizza2

Class: CheesyPizza

EquivalentTo:
Pizza and (hasTopping some CheeseTopping)

Individuals:
CheesyPizza1

Class: HighCaloriePizza

EquivalentTo:
Pizza and (hasCaloricContent some xsd:integer[>= 400])

Class: MargheritaPizza

SubClassOf:
NamedPizza,
hasTopping some MozzarellaTopping,
hasTopping some TomatoTopping,
hasTopping only (MozzarellaTopping or TomatoTopping)

Class: SpicyPizza

EquivalentTo:
Pizza
and (hasTopping some (hasSpiciness value Hot))

Class: Spiciness

EquivalentTo: {Hot1 , Medium2 , Mild3}

Class: Spiciness

EquivalentTo: Hot or Medium or Mild
